<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%white(%d{HH:mm:ss.SSS}) %highlight(%5p) %magenta(18971) %white(---) %white([%15.15t]) %cyan(%-40.40logger{39}) %white(:) %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="net.sandrohc.jikan" level="TRACE" />
    <logger name="org.mockserver.log.MockServerEventLog" level="WARN" />
</configuration>